<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shared_entry_book_info"
        android:background="#eeeeee"
        android:paddingBottom="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/search_book_cover"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:contentDescription="Desc" />

        <TextView
            android:id="@+id/search_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toEndOf="@+id/search_book_cover"
            android:text="Placeholder Title"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/search_tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_tv_title"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/search_book_cover"
            android:text="Placeholder Author"
            android:textSize="12sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/entry_book_info"
        android:paddingBottom="16dp"
        android:background="#eeeeee"
        android:id="@+id/selected_book_buttons"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entry_details_button"
            android:text="@string/details"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:clickable="true"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/entry_move_button"
            android:text="@string/move"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entry_delete_button"
            android:text="@string/delete"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:clickable="true"/>


    </LinearLayout>


</RelativeLayout>