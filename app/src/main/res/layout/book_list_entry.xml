<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/archive_entries_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/collapsed_book_view"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#eeeeee"
        android:minHeight="88dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/collapsed_book_info"
            android:layout_width="256dp"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/collapsed_book_name"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:gravity="bottom"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingBottom="4dp"
                android:textStyle="bold"
                tools:text="book name" />

            <TextView
                android:id="@+id/collapsed_page_num"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_below="@id/collapsed_book_name"
                android:layout_marginStart="-4dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@id/collapsed_book_author"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="1"
                android:paddingTop="4dp"
                tools:text="8000 Pages" />

            <TextView
                android:id="@+id/collapsed_book_author"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@id/collapsed_book_name"
                android:paddingTop="4dp"
                tools:text="book author"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/collapsed_book_start_date"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/collapsed_book_info"
            android:gravity="bottom|center"
            android:paddingBottom="4dp"
            tools:text="11/29/18" />

        <TextView
            android:id="@+id/collapsed_book_end_date"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/collapsed_book_info"
            android:layout_below="@id/collapsed_book_start_date"
            android:gravity="top|center"
            android:paddingTop="4dp"
            tools:text="11/30/18"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/selected_book_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="16dp"
        android:background="#eeeeee"
        android:layout_below="@id/collapsed_book_view"
        android:visibility="gone">

        <TextView
            android:id="@+id/selected_book_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/selected_book_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/selected_book_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/move"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>